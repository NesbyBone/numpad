<CustButton@Button>:
    font_size: 72

<GuiGridLayout>:
    id: numpad
    display: entry
    rows: 7
    padding: 10
    spacing: 5

    canvas:
		Color:
			rgba: 0, 1, 1, .3
		Rectangle:
			size: self.size
			pos: self.pos

	BoxLayout:
		Label:
			text: '[b]Enter your Cell Phone[/b]'
			font_size: 42
			markup: True
			size_hint_y: None
            height:50

    BoxLayout:
        TextInput:

            id: entry
            font_size: 92
            multiline: False
            size_hint: .5, 1

    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 10
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "<--"
            on_press: entry.text = ""
        CustButton:
            text: "Save"
            on_press:

    BoxLayout:
		Label:
			text: '[b]Bottom Label[/b]'
			font_size: 52
			markup: True
			size_hint_y: None