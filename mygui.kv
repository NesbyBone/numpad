<CustButton@Button>:
    font_size: 72

<GuiGridLayout>:
    id: numpad
    display: entry
    rows: 7
    padding: 10
    spacing: 5

    canvas:
		Color:
			rgba: 0, 1, 1, .3
		Rectangle:
			size: self.size
			pos: self.pos

	BoxLayout:
		Label:
			text: '[b]Ingrese número celular[/b]'
			font_size: 42
			markup: True
			size_hint_y: None
            height:50

    BoxLayout:
        TextInput:

            id: entry
            font_size: 92
            multiline: False
            size_hint: .5, 1

    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_release: root.TapNumber(self.text)
        CustButton:
            text: "2"
            on_release: root.TapNumber(self.text)
        CustButton:
            text: "3"
            on_release: root.TapNumber(self.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_release: root.TapNumber(self.text)
        CustButton:
            text: "5"
            on_release: root.TapNumber(self.text)
        CustButton:
            text: "6"
            on_release: root.TapNumber(self.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_release: root.TapNumber(self.text)
        CustButton:
            text: "8"
            on_release: root.TapNumber(self.text)
        CustButton:
            text: "9"
            on_release: root.TapNumber(self.text)

    BoxLayout:
        spacing: 10
        CustButton:
            text: "0"
            on_release: root.TapNumber(self.text)
        CustButton:
            text: "<--"
            on_release: entry.text = entry.text[0:len(entry.text)-1]
        CustButton:
            text: "ECO"
            on_release: root.setName(*args)

    BoxLayout:
		Label:
			text: '[b]Proyecto ECO[/b]'
			font_size: 52
			markup: True
			size_hint_y: None
			
<SetNamePopup>:
		
	title: 'Confirmar Número Celular'
	size_hint: .5, .3
	auto_dismiss: False
	
	GridLayout:
		orientation: 'vertical'
		cols: 2
		
		Label:
			text: 'Número: '
			font_size: 15
		Label:
			text: '' # Aqui tiene que ir el numero que el usuario ingreso
			font_size: 22
			
		Button:
			size_hint_y: .3
			text: 'Aceptar'
			on_press: root.SendSMS() # Se ejecuta la funcion de envio de sms con el numero confirmado
		Button:
			size_hint_y: .3
			text: 'Corregir'
			on_press: root.dismiss()			
